@charset "euc-kr";
@import url("reset.css");
*{-webkit-box-sizing:border-box;-moz-box-sizing:border-box;box-sizing:border-box}
body{font-family:'Noto Sans KR',sans-serif}

/* header */
header{overflow:hidden}
.top_menu_wrap{overflow:hidden;width:100%;height:40px;background:#004795}
.top_menu{margin:8px 25px 0;text-align:center}
.top_menu li{float:left;width:33.3%;height:32px}
.top_menu li:first-child{border-radius:4px 4px 0 0;background:#fff}
.top_menu li a{display:block;font-size:12px;font-weight:700;line-height:32px;color:#fff}
.top_menu li:first-child a{color:#004795}
.header{height:46px;border-bottom:1px solid #d4d4d4}
.logo{float:left;margin:9px 0 0 25px}
.logo a{display:block}
.logo img{width:101px;height:29px}
.gnb_open{float:right;width:29px;height:20px;margin:13px 25px 0 0;background:url(../images/btn_list.png) 0 0 no-repeat;background-size:cover;-webkit-background-size:cover}
.gnb_close{display:none;float:right;width:29px;height:20px;margin:13px 25px 0 0;background:url(../images/btn_close.png) 0 0 no-repeat;background-size:cover;-webkit-background-size:cover}
.gnb{display:none;clear:both}
.gnb > li{overflow:hidden;position:relative}
.gnb > li > a{display:block;height:55px;padding-left:24px;border-bottom:1px solid #d4d4d4;font-size:18px;font-weight:700;line-height:55px;color:#2a5dc4}
.gnb > li > a:after{position:absolute;top:14px;right:23px;width:28px;height:28px;background:url(../images/icon_down.png) 0 0 no-repeat;background-size:cover;-webkit-background-size:cover;content:''}
.gnb > li.on > a:after{position:absolute;top:14px;right:23px;width:28px;height:28px;background:url(../images/icon_up.png) 0 0 no-repeat;background-size:cover;-webkit-background-size:cover;content:''}
.gnb > li:nth-child(2) > a{color:#47587e}
.gnb > li:last-child > a{color:#a48738}
.gnb_area_wrap{display:none;overflow:hidden;padding:0 16px 74px;border-bottom:1px solid #ccc;background:#f8f8f8}
.gnb > li:first-child > .gnb_area_wrap{display:block}
.gnb_area{float:left;width:50%}
.gnb_area dl{padding:23px 16px 0}
.gnb_area dt{display:block;padding-bottom:12px;border-bottom:1px solid #000;font-size:13px;font-weight:700;color:#333}
.gnb_area dd a{display:block;border-bottom:1px solid #dfdfdf;font-size:13px;font-size:13px;line-height:41px;color:#333}

/* 메인 슬라이드 */
.main_vis_wrap{overflow:hidden}
.main_vis_wrap .slick-arrow{display:none!important}
.main_vis_wrap img{width:100%}

/* 바로가기 메뉴 */
.util_menu{overflow:hidden}
.util_menu li{float:left;width:25%;background:#004795 url(../images/blt_bn_bar.png) left center no-repeat}
.util_menu li:first-child{background-image:none}
.util_menu li a{display:block;height:87px;padding-top:58px;background:url(../images/ico_ckd_company.png) center 16px no-repeat;background-size:28px 32px;font-size:12px;color:#fff;text-align:center;-webkit-background-size:28px 32px}
.util_menu li:nth-child(2) a{background-image:url(../images/ico_ckd_lab.png);background-size:18px 33px;-webkit-background-size:18px 33px}
.util_menu li:nth-child(3) a{background-image:url(../images/ico_ckd_news.png);background-size:32px 29px;-webkit-background-size:32px 29px}
.util_menu li:nth-child(4) a{background-image:url(../images/ico_ckd_pharm.png);background-size:22px 31px;-webkit-background-size:22px 31px}

/* 제품검색 */
.search_wrap{overflow:hidden;padding:0 25px;background:#f0f4f8}
.search_wrap h2{margin:23px 0 0;font-size:14px;font-weight:700;color:#000}
.search_form{position:relative;margin-top:22px}
.search{width:100%;height:48px;padding-left:10px;border:5px solid #5f88b8}
.search_btn{position:absolute;top:9px;right:11px;width:29px;height:30px;border:none;background:url(../images/ico_reading_glasses.png) 0 0 no-repeat;background-size:cover;-webkit-background-size:cover}
.search_list li{float:left;width:25%;margin-top:22px;text-align:center}
.search_list li a{display:block;height:94px;padding-top:60px;background:url(../images/ico_ckd_cold.png) center 0 no-repeat;background-size:52px 52px;font-size:12px;color:#2d3f55;-webkit-background-size:52px 52px}

/* 제품소개 */
.intro_wrap{overflow:hidden;padding:0 25px}
.intro_wrap h2{margin:23px 0 0;font-size:14px;font-weight:700;color:#000}
.intro{position:relative}
.intro_area{margin-top:23px;text-align:center}
.intro_wrap .intro_img{display:block;max-width:1334px;height:140px;margin:0 auto;border-bottom:1px solid #dbdbdb}
.intro_wrap .intro_img img{width:auto;height:100%;margin:0 auto}
.intro_area dt{display:block;margin-top:15px;font-size:12px;font-family:'Noto Sans KR',sans-serif;color:#000}
.intro_area dt span{display:block;margin-top:6px;font-size:14px}
.intro_area dd{display:block;margin-top:10px;padding-bottom:26px;font-size:12px}
.intro .slick-arrow{position:absolute;z-index:1000;width:31px;height:30px}
.intro .slick-prev{top:205px;left:0;background:url(../images/img_product_slide_left.png) 0 0 no-repeat;background-size:cover;-webkit-background-size:cover}
.intro .slick-next{top:205px;right:0;background:url(../images/img_product_slide_right.png) 0 0 no-repeat;background-size:cover;-webkit-background-size:cover}

/* 홍보영상 */
.promotiorn img{width:100%}

/* 전자공고 */
.notice_wrap{overflow:hidden;position:relative;height:166px;padding:0 25px}
.notice_wrap h2{margin:23px 0 0;font-size:14px;font-weight:700;color:#000}
.notice{position:relative;margin-top:23px}
.notice li{margin-top:14px}
.notice li a{display:block;font-size:12px;color:#666}
.notice li a span{position:absolute;right:0}
.notice_btn{display:block;overflow:hidden;position:absolute;top:20px;right:25px;width:17px;height:17px;background:url(../images/ico_more01.png) 0 0 no-repeat;background-size:cover;text-indent:-9999px;-webkit-background-size:cover}

/* FAMILY SITE */
.f_site_wrap{overflow:hidden}
.f_site_area{padding:0 25px;background:#eaeef2;display: none;}
.f_site_area .tit{height:37px;border-bottom:1px solid #e3e8ec;font-size:12px;font-weight:700;line-height:37px;color:#19325e}
.f_site{overflow:hidden;margin-top:-17px;padding-bottom:22px}
.f_site li{float:left;width:33.33%;margin-top:26px;background:url(../images/ico_fs_tag.png) 0 5px no-repeat;background-size:5px 9px;font-weight:700;-webkit-background-size:5px 9px}
.f_site li a{padding-left:8px;font-size:12px;color:#666}
.f_site_btn{display:block;height:41px;padding:0 25px;border-top:1px solid #666;border-bottom:1px solid #666;background:#eaeaea url(../images/ico_more02.png) right 0 no-repeat;background-size:34px 41px;font-size:12px;font-weight:700;line-height:41px;color:#666;-webkit-background-size:34px 41px}

/* footer */
.footer_menu_wrap{background: #666;height: 45px;border-bottom: 1px solid #a0a0a0;position: relative;}
.footer_menu{padding: 0 25px 0 14px;}
.footer_menu li{float: left;}
.footer_menu li a{display: block;padding: 0 9px 0 11px;background: url(../images/blt_contactus.png) 0 18px no-repeat;font-size: 10px;color: #fff;line-height: 45px;}
.footer_menu li:first-child a{background: none;}
.page_top{font-size: 10px;color: #666;font-weight: 700;padding-top: 12px;text-align: center;width: 50px;height: 43px;background: #fff url(../images/ico_page_top.png) 18px 24px no-repeat;-webkit-background-size: 14px 9px;background-size: 14px 9px;position: absolute;right: 0;top:1px;}
footer address{margin-top: 20px;font-size: 10px;color:#333;text-align: center;line-height: 15px;}
footer .copyright{font-size: 10px;color: #666;line-height: 15px;text-align: center;margin: 12px 0 22px 0;}